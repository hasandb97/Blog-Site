
@{
    ViewBag.Title = "Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PagedList.IPagedList<MyBlog.Models.TBL_Posts>
@using PagedList.Mvc;

<h2>Page</h2>


<div class="container" style="margin-top: 20px;">
    <h3>Products List</h3>
    <table border="1" class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Status</th>
            <th>Price</th>
          
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Post_Title</td>
                <td>@product.Post_Summery</td>
                <td>@product.Post_Writer</td>
                <td>@product.Post_Status</td>
               
            </tr>
        }
    </table>
    <br />
    @Html.PagedListPager(Model, page => Url.Action("Page", new { page, pageSize = Model.PageSize }))
    Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount Products
</div>

