
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/_LayoutHeadFoot.cshtml";
}

<div class="container" style="margin-top:10px;">

    @using (Html.BeginForm("AdminLogin", "Admin", FormMethod.Post, new { @class = "Frm" }))
    {
        <h4 style="color:green;text-align:center;font-weight:bold;">@ViewBag.AdminRegisterSucceed</h4>
        <h4 style="color:orangered;text-align:center;font-weight:bold;">@ViewBag.LoginFailed</h4>

        <h2 style="text-align:center;color:#05123f;font-weight:bold;"> فرم ورود به حساب کاربری ادمین</h2><br />
        <p style="color:black">لطفا اطلاعات خود را با دقت وارد نمایید</p>
        <div class="form-group">
            <input type="text" style="max-width:100% !important;margin:0 auto;margin-top:20px;" id="Email" class="form-control" name="Email" placeholder="ایمیل" required />
        </div>
        <div class="form-group">
            <input type="password" style="max-width:100% !important;margin:0 auto;margin-top:20px;" id="Password" class="form-control" name="Password" placeholder="کلمه عبور" required /><br />
            <button class="btn btn-danger">تایید</button>
            @Html.ActionLink("حساب کاربری ندارید؟", "AdminRegister", new { Controller = "Admin" }, new { @class = "message-alert" })

        </div>
    }


</div>
