@model MyBlog.Models.TBL_Posts
@{
    ViewBag.Title = "ShowPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-8  posts-list">
    <div class="col-lg-12 col-md-12 col-sm-12 posts-detail">

        <div class="posts-detail-texts">
            <h2 style="margin-top:50px;font-weight:bold;margin-bottom:30px;">@Model.Post_Title</h2>

            <p style="font-weight:bold;margin-bottom:50px;">@Model.Post_Summery</p>
        </div>

        <div class="img-posts">
            <img src="images/blog-1.jpg" height="100" width="100">
        </div>
        <div class="posts-detail-texts">

            <i class="fa fa-calendar"></i>
            <p class="f-awesome-posts-detail">6 مرداد 1400</p>
            <i class="fa fa-user"></i>
            <p class="f-awesome-posts-detail">6 مرداد 1400</p>
            <div class="post-text-content">
                @Html.Raw(Model.Post_Text)
            </div>

        </div>
    </div>


    <hr class="bg-gray">
    <div class="col-lg-12 next-pre-div">
        <a class="pre-a" href="https://codban.com">قبلی</a>
        <a class="next-a" href="https://codban.com">بعدی</a>

    </div>
    <hr class="bg-gray">

    <div class="comments-div col-lg-12 col-md-12 col-sm-12">
        <h3>ثبت نظر</h3>
        <p>اطلاعات هویتی شما نزد ما محفوظ می ماند</p>
        <form>
            <input id="input-name" class="form-control input-contact-mobile" placeholder="نام و نام خانوادگی">
            <input id="input-email" class="form-control input-contact-mobile" placeholder="ایمیل">
            <textarea placeholder="متن نظر" id="txterea-contactus" class="form-control input-contact-mobile" rows="5"></textarea>
            <input id="btn-submit" value="تایید" type="submit">

        </form>
    </div>


</div>
